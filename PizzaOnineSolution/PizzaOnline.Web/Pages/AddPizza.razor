@page "/AddPizza"
@inherits AddPizzaBase

<h3>Create new pizza</h3>

<EditForm Model="newPizza" OnValidSubmit="HandleAddNewPizza">
    <DataAnnotationsValidator/>
    <div class="form-group mb-2">
        <label for="name">Name</label>
        <InputText id="nameInput" @bind-Value="newPizza.Name"></InputText>
    </div>
    <div class="form-group mb-2">
        <label for="description">Description</label>
        <InputText id="descriptionInput" @bind-Value="newPizza.Description"></InputText>
    </div>
    <div class="form-group mb-2">
        <label for="price">Price</label>
        <InputNumber id="priceInput" @bind-Value="newPizza.UnitPrice"></InputNumber>
    </div>
    <div class="form-group mb-2">
        <label for="size">Size</label>
        <InputSelect @bind-Value="newPizza.Size">
            <option value="Small">24 cm</option>
            <option value="Medium">32 cm</option>
            <option value="Large">45 cm</option>
        </InputSelect>
    </div>
    <div class="form-group mb-2">
        <label for="size">Stuffed crust</label>
        <InputSelect @bind-Value="newPizza.StuffedCrust">
            <option value="Normal">Normal</option>
            <option value="Cheese">Cheese</option>
            <option value="Beacon">Beacon</option>
            <option value="Jalapeno">Jalapeno</option>
        </InputSelect>
    </div>
    <div class="form-control-file">
        <label for="image">Image</label>
        <InputFile OnChange="OnFileChange"/>
    </div>

    <button type="submit" class="btn btn-secondary btn-add">Add</button>
    <ValidationSummary/>
</EditForm>
